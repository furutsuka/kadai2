<% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>

<%= form_for @book do |f| %>
  <p>
<b><%= f.label(:title, "titile:") %></b>
      <%= @book.title %>
  </p>
  <p>
<b><%= f.label :body, "body:" %></b>  
      <%= @book.body %>
  </p>
<% end %>
<%= link_to "edit", edit_book_path(@book.id) %>
