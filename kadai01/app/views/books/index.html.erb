<h1>Books</h1>
<table>
<thead>
<tr>
<th>title</th>
<th>body</th>
<th></th>
</tr>
</thead>

<tbody>
<% @books.each do |book| %>
<tr> 
<td>
<%= book.title %>
</td>
<td>
<%= book.body %>
</td>
<td><%= link_to "show", book_path(book.id) %></td>
<td><%= link_to "edit", edit_book_path(book.id) %></td>
<td><%= link_to 'Destroy',book_path(book.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
</tr>  
<% end %>
</tbody>   
</table>

<% if @book.errors.any? %>
  <div class="alert alert-warning">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>


<h3>New Book</h3>
<table>

<tbody>
<%= form_for @book do |f| %>
<tr><td>title</td></tr>
<tr><td><%= f.text_field :title %></td></tr>
<tr><td>Body</td></tr>
<tr><td><%= f.text_area :body %></td></tr>
<tr><td><%= f.submit 'Create Book' %></td></tr>
<% end %>
</tbody>
</table>


